{
	"compilerOptions": {
		"allowJs": false,
		"lib": ["es7", "dom"],
		"module": "commonjs",
		"noImplicitAny": true,
		"strict": true,
		"target": "es2017",
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"outDir": "types"
	},
	"exclude": [
		".nyc_output",
		".vscode",
		"coverage",
		"node_modules",
		"tests",
		"types"
	]
}