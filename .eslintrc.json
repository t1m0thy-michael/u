{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": 0,
        "default-case": 2,
        "dot-location": [
            "error",
            "property"
        ],
        "no-floating-decimal": 2,
        "no-unused-vars": [
            2,
            {
                "args": "after-used",
                "argsIgnorePattern": "^CONFIG"
            }
        ]
    },
    "globals": {
        "require": false,
        "google": false
    }
}
